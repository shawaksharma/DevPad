{% extends '@content/page.twig' %}

{% import '@util/formmacro.twig' as f %}

{% set title = context.user.login ~ ' - New Note' %}

{% set breadcrumbs = [{link: base ~ '/' , text: 'Home'} , {link: base ~ '/project/' ~ index, text: 'Project'}, {text: 'New Note'}] %}

{% block main %}
    <section class="row">
        <article class="col-md-12 mt-5">
            <div class="box">
                <div class="box-heading">
                    <br><br>
                    <h1>New Note</h1>
                    <br>
                </div>
                <div class="box-body">
                {% include '@util/message.twig' %}
                    {{f.startform({method: 'post', id: 'nform'})}}
                        {{f.text({label: 'Note Title', name: 'title', ph: 'Note Title'})}}
                        {{f.textarea({label: 'Note', name: 'content', ph: 'Note'})}}
                        {{f.file({name: 'file', multiple})}}
                        {{f.submit({value: 'Create'})}}
                    {{f.endform()}}
                </div>
            </div>
        </article>
    </section>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}